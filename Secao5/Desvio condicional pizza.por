programa
{
	
	funcao inicio()
	{
		logico pizza_fria = verdadeiro

		escreva("Entra em casa! \n")
		escreva("Olha para a mesa! \n")

		se (pizza_fria) {
			escreva("Esquenta a pizza! \n")
		}
		escreva("Come a pizza! \n")

	}	
	
	
}
